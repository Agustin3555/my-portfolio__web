---
import './Pill.css'
import Icon from '../Icon/Icon.astro'

export interface Props {
  faIcon?: string
  emoji?: string
  size?: 's' | 'm'
}

const { faIcon, emoji, size } = Astro.props
---

<div class:list={['cmp-pill', size, { bg: size !== undefined }]}>
  {faIcon && <Icon {faIcon} />}
  {emoji && <span>{emoji}</span>}
  <slot />
</div>
