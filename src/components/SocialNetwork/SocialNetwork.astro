---
import * as SocialNetworkStyled from "./SocialNetwork.styled";
import Icon from "@/components/Icon/Icon.astro";
import GlassPanel from "@/layouts/GlassPanel/GlassPanel.astro";
import { FONT_SIZE, VARS } from "@/styles";

interface Props {
  href: string;
  iconName: string;
  title: string;
}

const { href, iconName, title } = Astro.props;
---

<SocialNetworkStyled.Component
  title={title}
  href={href}
  target="_blank"
  rel="noopener"
>
  <GlassPanel
    style={{
      padding: VARS.component.button.s.padding,
      borderRadius: VARS.component.button.s.borderRadius,
    }}
  >
    <Icon iconName={iconName} style={{ size: FONT_SIZE.m }} />
  </GlassPanel>
</SocialNetworkStyled.Component>
