---
import * as SeparatorStyled from "./Separator.styled";
import { type HandlingClass, asClassName } from "@/tools";

export interface Props {
  asSpan?: boolean;
  style: SeparatorStyled.Props;
  handlingClass?: HandlingClass;
}

const { asSpan = false, style, handlingClass = [] } = Astro.props;

const props = {
  p: SeparatorStyled.adapter(style),
  className: asClassName(...handlingClass),
};
---

{
  asSpan ? (
    <SeparatorStyled.SpanComponent {...props} />
  ) : (
    <SeparatorStyled.HrComponent {...props} />
  )
}
