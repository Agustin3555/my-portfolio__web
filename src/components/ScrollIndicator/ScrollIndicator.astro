---
import * as ScrollIndicatorStyled from "./ScrollIndicator.styled";
import { type HandlingClass, asClassName } from "@/tools";

interface Props {
  handlingClass?: HandlingClass;
}

const { handlingClass = [] } = Astro.props;
---

<ScrollIndicatorStyled.Component className={asClassName(...handlingClass)}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="swipe-icon"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    stroke-width="1"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path d="M12 16m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
    <path d="M12 12v-8"></path>
    <path d="M9 7l3 -3l3 3"></path>
  </svg>
</ScrollIndicatorStyled.Component>
