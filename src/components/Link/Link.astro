---
import * as LinkStyled from "./Link.styled";
import { type HandlingClass, asClassName } from "@/tools";

export interface Props {
  href: string;
  text: string;
  handlingClass?: HandlingClass;
}

const { href, text, handlingClass = [] } = Astro.props;
---

<LinkStyled.Component
  href={`/${href}`}
  className={asClassName(...handlingClass)}
>
  {text}
</LinkStyled.Component>
