---
import * as ContactLinkStyled from "./ContactLink.styled";
import Icon from "../Icon/Icon.astro";
import { VARS } from "@/styles";
import jsonData from "@/data.json";

export interface Props {
  emailSender?: boolean;
}

const { emailSender = false } = Astro.props;

const { sections } = jsonData.pages.home;
const sectionKey: keyof typeof sections = "contact";

const { email } = sections.contact.data;
---

<ContactLinkStyled.Component
  href={emailSender ? `mailto:${email}` : `/#${sectionKey}`}
  title={emailSender ? "Enviar correo" : "ContÃ¡ctame"}
  data-email-sender={emailSender}
>
  <Icon
    iconName="fa-solid fa-paper-plane"
    style={{ size: VARS.component.button.s.iconSize }}
  />
</ContactLinkStyled.Component>
