---
import './Section.css'
import Icon from '@/components/Icon/Icon.astro'

interface Props {
  sectionKey: string
  title: string
  strong: string
  faIcon: string
  main?: boolean
}

const { sectionKey, title, strong, faIcon, main } = Astro.props
---

<section class:list={{ main }} id={sectionKey}>
  <header>
    <div class="bullet">
      <Icon faIcon={faIcon} />
    </div>
    {
      main ? (
        <h1>
          {title}
          <strong>{strong}</strong>
        </h1>
      ) : (
        <h2>
          {title}
          <strong>{strong}</strong>
        </h2>
      )
    }
  </header>
  <slot />
</section>
