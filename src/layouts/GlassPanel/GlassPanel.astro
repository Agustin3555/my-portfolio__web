---
import * as GlassPanelStyled from "./GlassPanel.styled";
import { type HandlingClass, asClassName } from "@/tools";

interface Props {
  style?: GlassPanelStyled.Props;
  handlingClass?: HandlingClass;
}

const { style = {}, handlingClass = [] } = Astro.props;
---

<GlassPanelStyled.Component
  p={GlassPanelStyled.adapter(style)}
  className={asClassName("glass", ...handlingClass)}
>
  <div>
    <slot />
  </div>
</GlassPanelStyled.Component>
